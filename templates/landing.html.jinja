<html>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="author" content="colorlib.com">
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,800" rel="stylesheet" />
  <link href="/static/css/main.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <style>/* Add this CSS to your existing CSS file or style tag */

/* Center the buttons */
.input-field {
  text-align: center;
}

/* Style the buttons */
.btn {
  padding: 10px 20px; /* Increase padding for bigger buttons */
  font-size: 16px; /* Increase font size for better readability */
  margin: 10px; /* Add margin for better spacing */
  border-radius: 8px; /* Add border radius for rounded corners */
}

/* Style the buttons on hover */
.btn:hover {
  background-color: #007bff; /* Change background color on hover */
  color: #fff; /* Change text color on hover */
}
</style>
</head>

<body>
  <input type="checkbox" id="active">
  <label for="active" class="menu-btn"><i class="fa-bars"></i></label>
  <div class="wrapper">
    <ul>
      <li><a href="/">Maps</a></li>
      <li><a href="/locations">Locations</a></li>
      <li><a href="/aboutus">About</a></li>
      <li><a href="/questionnnaire">Questionaire</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/feedback">Feedback</a></li>

      {% if not current_user.is_authenticated %}
      <hr>
      <li><a href="/signin">Login</a></li>
      <li><a href="/signup">Sign Up</a></li>
      {% endif %}
    </ul>
  </div>
  <div class="s004">
    <form>
      <fieldset>
        <legend style="color: #fff;"> Choose View:</legend>
        <div class="inner-form">
          <div class="input-field">
            <a class="btn btn-primary" href="/maps">Maps</a>
            <a class="btn btn-primary" href="/locations">List</a>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
  <div id="map" style="display: none;"> <!-- Initially hide the map -->
    <!-- Embed the map here -->
    <iframe src="/maps" width="100%" height="600px"></iframe>
  </div>
  <div id="list" style="display: none;"> <!-- Initially hide the list -->
    <!-- Your list content here -->
    <p>This is the list view.</p>
  </div>
  <script>
    function showMaps() {
      document.getElementById("map").style.display = "block";
      document.getElementById("list").style.display = "none";
    }

    function showList() {
      document.getElementById("map").style.display = "none";
      document.getElementById("list").style.display = "block";
    }
  </script>
</body>

</html>
